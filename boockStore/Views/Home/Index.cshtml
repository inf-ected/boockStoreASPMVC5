@{
    ViewBag.Title = "Книжный Магазин";
}


<div>
    <h3>Сегодня в продаже!</h3>
    <table>
        <tr>
            <td><p>Название Книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td></td>

        </tr>
        @foreach (var b in ViewBag.Books) {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><a href="/home/Buy/@b.Id">Купить</a></td>

            </tr>
        }
    </table>
</div>
